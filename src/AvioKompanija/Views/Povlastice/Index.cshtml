@model IEnumerable<AvioKompanija.Models.Povlastice>

@{
    ViewData["Title"] = "Index";
}


    <div class="col-12">
        <h1 style="position:relative;top:20%;left:20%">
            Neki od naših specijalnih paketa.
        </h1>
        <img src="https://media.gettyimages.com/photos/flight-attendant-serving-businessman-on-corporate-jet-picture-id500817415" style="width:100%;" />
    </div>


<p>
    <a asp-action="Create">Dodaj novu povlasticu</a>
</p>

@foreach(var item in Model)
{
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h4 style="color:darkred;" >@item.Naziv</h4>
                <p>@item.Detalji</p>
                <h5> Doplata na cijenu karte:@item.Procenat KM</h5>
            </div>
            <div class="col-8"></div>
            <div class=" col-4">
                <a asp-action="Edit" asp-route-id="@item.Id">Uredi ponudu</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Izbriši ponudu</a>
            </div>
        </div>
    </div>

}
