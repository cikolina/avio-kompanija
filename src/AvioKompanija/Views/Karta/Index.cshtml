@model IEnumerable<AvioKompanija.Models.Karta>

@{
    ViewData["Title"] = "Kupljene karte";
}

<h1>Kupljene karte</h1>


<table class="table-hover table-bordered " border="3">
    <thead style="background-color:darkgray">
        <tr>
            <th>
              <!--  @Html.DisplayNameFor(model => model.BrojSjedista)-->
                Broj Sjedišta
            </th>
            <th>
             <!--   @Html.DisplayNameFor(model => model.DatumProdaje)-->
                Datum Prodaje
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cijena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Popust)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Storn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Let)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Putnik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sluzbenik)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BrojSjedista)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatumProdaje)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cijena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Popust)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Storn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Let.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Putnik.BrojPasosa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sluzbenik.Ime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Izmjeni</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalji</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Obriši</a>
            </td>
        </tr>
}
    </tbody>
</table>

<p>
    <a asp-action="Create">Kupi novu kartu</a>
</p>